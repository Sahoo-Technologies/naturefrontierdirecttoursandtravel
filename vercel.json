{
  "version": 2,
  "buildCommand": "cd client && vite build",
  "outputDirectory": "../dist/public",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/backup/cron",
      "schedule": "0 2 * * *"
    }
  ]
}
